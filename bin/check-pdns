#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import subprocess

import memcache


PDNS_CONTROL = '/usr/local/bin/pdns_control'


ret_code = subprocess.call([PDNS_CONTROL, 'status'], 
                           stderr=subprocess.DEVNULL,
                           stdout=subprocess.DEVNULL)
if ret_code != 0:
    print('pdns is not running')
    exit(1)

print('all checks passed')

